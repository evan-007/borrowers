<table class='primary'>
  <thead>
    <tr>
      <th>Description</th>
      <th>Borrowed since</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each itemController='articles/item'}}
    <tr>
      <td>{{description}}</td>
      <td>{{createdAt}}</td>
      <td>{{createdAt}}</td>
      <td>{{view Ember.Select content=states selection=state}}</td>
      <td>
        {{#if isSaving}}
        <p>
          Saving ...
        </p>
        {{else}}
          {{#if isDirty}}
            <button {{action 'save' this}}>Save</button>
          {{/if}}
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
